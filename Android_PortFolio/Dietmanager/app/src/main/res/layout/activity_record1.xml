<?xml version="1.0"?>

    <RelativeLayout tools:context=".MainActivity" android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin" android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingBottom="@dimen/activity_vertical_margin" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/layoutEdit">

    <EditText android:layout_height="wrap_content" android:layout_width="0px" android:id="@+id/editdate9" android:text="" android:hint="날짜" android:layout_margin="5dp" android:layout_weight="1.5"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/editche9" android:text="" android:hint="체중" android:layout_margin="5dp" android:layout_weight="1" android:inputType="number"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/editbmi9" android:text="" android:hint="BMI수치" android:layout_margin="5dp" android:layout_weight="1" android:inputType="number"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/layoutButton" android:layout_below="@id/layoutEdit">

    <Button android:layout_height="wrap_content" android:layout_width="0px" android:id="@+id/buttonAdd" android:text="기록" android:layout_margin="5dp" android:layout_weight="1" android:onClick="onClick"/>

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/buttonUpdate" android:text="수정" android:layout_margin="5dp" android:layout_weight="1" android:onClick="onClick"/>

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/buttonDel" android:text="삭제" android:layout_margin="5dp" android:layout_weight="1" android:onClick="onClick"/>

</LinearLayout>

    <ListView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/listMember" android:layout_margin="5dp" android:layout_below="@id/layoutButton"/>

</RelativeLayout>
